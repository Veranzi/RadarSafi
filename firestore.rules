rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reports collection - users can read/write their own reports
    match /reports/{reportId} {
      // Allow read if user is authenticated and owns the report
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || 
                      request.auth.uid == request.resource.data.userId);
      
      // Allow create if user is authenticated
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId &&
                       request.resource.data.keys().hasAll(['userId', 'userEmail', 'reportType', 'reportData', 'verificationResult', 'timestamp', 'status']);
      
      // Allow update/delete only if user owns the report
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.userId;
    }
    
    // Users collection (if you need it later)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

